<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stroke layer (appears at the bottom and follows corner radius) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_text" /> <!-- stroke color -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main white background with insets to reveal stroke only at the bottom -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
