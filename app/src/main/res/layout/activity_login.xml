<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deafult_bg"
    android:padding="30dp"
    tools:context=".Login">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_app_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/app_icon_bg" />

            <TextView
                android:id="@+id/login_greeting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:textStyle="bold"
                android:text="Hello again!"
                android:textColor="#000000"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="@+id/login_app_logo"
                app:layout_constraintStart_toStartOf="@+id/login_app_logo"
                app:layout_constraintTop_toBottomOf="@+id/login_app_logo" />

            <TextView
                android:id="@+id/login_subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login to your account"
                app:layout_constraintEnd_toEndOf="@+id/login_greeting_text"
                app:layout_constraintStart_toStartOf="@+id/login_greeting_text"
                app:layout_constraintTop_toBottomOf="@+id/login_greeting_text" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_email_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:inputType="textEmailAddress"
                android:textColorHint="#AAAAAA"
                app:hintEnabled="false"
                app:errorEnabled="true"
                app:boxStrokeErrorColor="#FF3737"
                app:layout_constraintEnd_toEndOf="@+id/login_subtitle_text"
                app:layout_constraintStart_toStartOf="@+id/login_subtitle_text"
                app:layout_constraintTop_toBottomOf="@+id/login_subtitle_text">

                <EditText
                    android:id="@+id/login_email_input"
                    android:layout_width="300dp"
                    android:layout_height="52dp"
                    android:background="@drawable/custom_input_edittext"
                    android:drawableStart="@drawable/email_icon_edittext"
                    android:drawablePadding="10dp"
                    android:hint="Enter your email address"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    app:hintAnimationEnabled="false"
                    android:inputType="textEmailAddress"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_password_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="16"
                app:hintEnabled="false"
                android:inputType="textPassword"
                android:textColorHint="#AAAAAA"
                app:layout_constraintEnd_toEndOf="@+id/login_email_input_layout"
                app:layout_constraintStart_toStartOf="@+id/login_email_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/login_email_input_layout"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_password_input"
                    android:layout_width="300dp"
                    android:layout_height="52dp"
                    android:background="@drawable/custom_input_edittext"
                    android:drawableStart="@drawable/password_icon_edittext"
                    android:drawablePadding="10dp"
                    android:ems="16"
                    app:hintAnimationEnabled="false"
                    android:hint="Enter your password"
                    android:paddingStart="12dp"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/login_forgot_password_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="-18dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Forgot password?"
                android:textColor="#D32F2F"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/login_password_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/login_password_input_layout"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/login_continue_button"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/blue_btn"
                android:text="Continue"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_password_input_layout" />

            <TextView
                android:id="@+id/login_no_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/login_continue_button"
                app:layout_constraintTop_toBottomOf="@+id/login_continue_button" />

            <TextView
                android:id="@+id/login_signup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Sign-up"
                android:textColor="#487BC8"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/login_no_account_text"
                app:layout_constraintStart_toEndOf="@+id/login_no_account_text"
                app:layout_constraintTop_toTopOf="@+id/login_no_account_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>