<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".VerifySignUp">

    <ImageView
        android:id="@+id/rocket_icon_vsu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/rocket_icon" />

    <TextView
        android:id="@+id/heading_vsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Verify your email"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/description_vsu"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:text="We've sent a verification link to your email address. Please click on the link to complete your registration."
        android:textAlignment="center" />

    <TextView
        android:id="@+id/email_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:text="user@example.com"
        android:textColor="@color/sky_blue"
        android:textSize="18sp" />

    <Button
        android:id="@+id/open_email_btn_vsu"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/blue_btn"
        android:text="Open Email App"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/resend_link_btn_vsu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Resend verification link"
        android:textColor="@color/blue_btn"
        app:cornerRadius="10dp"
        app:strokeColor="@color/blue_btn"
        app:strokeWidth="1.5dp" />

    <TextView
        android:id="@+id/trouble_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Didn't receive the email? Check your spam folder."
        android:textColor="#666666"
        android:textSize="14sp" />

</LinearLayout>