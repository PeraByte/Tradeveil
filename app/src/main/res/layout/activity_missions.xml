<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_deafult"
    tools:context=".Missions">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/socialMediaTaskTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="SOCIAL MEDIA TASKS"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow our socials and earn points"
                    app:layout_constraintEnd_toEndOf="@+id/socialMediaTaskTxt"
                    app:layout_constraintStart_toStartOf="@+id/socialMediaTaskTxt"
                    app:layout_constraintTop_toBottomOf="@+id/socialMediaTaskTxt" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/instagramIcon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="-38dp"
                    android:background="@drawable/white_circle"
                    android:elevation="10dp"
                    android:padding="18dp"
                    app:srcCompat="@drawable/instagram_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/instagramTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:text="Follow our Instagram"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/instagramButton"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_btn"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/instagramPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="12dp"
                            android:text=" +100 Points"
                            android:textColor="@color/dark_grey_text"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/twitterIcon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-38dp"
                    android:background="@drawable/white_circle"
                    android:layout_marginTop="8dp"
                    android:elevation="10dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/twitter_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/twitterTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:text="Follow our Twitter"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/twitterButton"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_btn"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/twitterPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="12dp"
                            android:text=" +100 Points"
                            android:textColor="@color/dark_grey_text"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/youtubeIcon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-38dp"
                    android:background="@drawable/white_circle"
                    android:layout_marginTop="8dp"
                    android:elevation="10dp"
                    android:padding="18dp"
                    app:srcCompat="@drawable/youtube_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/youtubeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:text="Subscribe our Youtube"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/youtubeButton"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_btn"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/youtubePoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="12dp"
                            android:text=" +100 Points"
                            android:textColor="@color/dark_grey_text"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/facebookIcon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-38dp"
                    android:background="@drawable/white_circle"
                    android:layout_marginTop="8dp"
                    android:elevation="10dp"
                    android:padding="16dp"
                    app:srcCompat="@drawable/facebook_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/facebookTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:text="Follow our Facebook"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/facebookButton"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_btn"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/facebookPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:layout_gravity="center_horizontal"
                            android:text=" +100 Points"
                            android:textColor="@color/dark_grey_text"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/telegramIcon"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="-38dp"
                    android:background="@drawable/white_circle"
                    android:layout_marginTop="8dp"
                    android:elevation="10dp"
                    android:padding="18dp"
                    app:srcCompat="@drawable/telegram_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/telegramTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:text="Join our Telegram"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/telegramButton"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_btn"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/telegramPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text=" +100 Points"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/dark_grey_text"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="174dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/partnerMissionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_btn"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="Partner task coming soon"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        app:layout_constraintBottom_toTopOf="@+id/visitWebsiteButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/partnerMissionTitle"
                        app:srcCompat="@drawable/hand_mission" />

                    <Button
                        android:id="@+id/visitWebsiteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginBottom="24dp"
                        android:backgroundTint="@color/blue_btn"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Partner with us"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="TouchTargetSizeCheck" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/spacer"
                android:layout_width="340dp"
                android:layout_height="1.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/header_divider_home" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>