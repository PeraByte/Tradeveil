<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LeaderboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:background="@drawable/leaderboard_bg">

        <TextView
            android:id="@+id/textView105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/samsung_sharp_sans_bold"
            android:text="Leader Board"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView105"
            app:srcCompat="@drawable/podium_leaderboard" />

        <ImageView
            android:id="@+id/imageView58"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imageView57"
            app:layout_constraintEnd_toEndOf="@+id/imageView57"
            app:layout_constraintStart_toStartOf="@+id/imageView57"
            app:srcCompat="@drawable/avatar" />

        <ImageView
            android:id="@+id/imageView59"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="-40dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imageView57"
            app:layout_constraintEnd_toEndOf="@+id/imageView57"
            app:srcCompat="@drawable/avatar" />

        <ImageView
            android:id="@+id/imageView60"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="-16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imageView57"
            app:layout_constraintStart_toStartOf="@+id/imageView57"
            app:srcCompat="@drawable/avatar" />

        <ImageView
            android:id="@+id/imageView61"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="-16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView58"
            app:layout_constraintEnd_toEndOf="@+id/imageView58"
            app:layout_constraintStart_toStartOf="@+id/imageView58"
            app:srcCompat="@drawable/crown_icon_leaderboard" />

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="-16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView60"
            app:layout_constraintEnd_toEndOf="@+id/imageView60"
            app:layout_constraintStart_toStartOf="@+id/imageView60"
            app:srcCompat="@drawable/crown_icon_leaderboard" />

        <ImageView
            android:id="@+id/imageView63"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="-16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView59"
            app:layout_constraintEnd_toEndOf="@+id/imageView59"
            app:layout_constraintStart_toStartOf="@+id/imageView59"
            app:srcCompat="@drawable/crown_icon_leaderboard" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#EFEEFC"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView57">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider8"
                    android:layout_width="70dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="?android:attr/listDivider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>