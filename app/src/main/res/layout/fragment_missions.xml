<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MissionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deafult_bg"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/socialMediaTaskTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/samsung_sharp_sans_bold"
                    android:text="SOCIAL MEDIA TASKS"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/samsung_sharp_sans_bold"
                    android:text="Follow our socials and earn points"
                    app:layout_constraintEnd_toEndOf="@+id/socialMediaTaskTxt"
                    app:layout_constraintStart_toStartOf="@+id/socialMediaTaskTxt"
                    app:layout_constraintTop_toBottomOf="@+id/socialMediaTaskTxt" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="-42dp"
                    android:elevation="10dp"
                    app:srcCompat="@drawable/instagram_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView116"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:fontFamily="@font/samsung_sharp_sans_bold"
                            android:text="Follow our Instagram"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button23"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_app"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView117"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text=" +100 Points"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="-42dp"
                    android:elevation="10dp"
                    app:srcCompat="@drawable/twitter_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView118"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:fontFamily="@font/samsung_sharp_sans_bold"
                            android:text="Follow our Twitter"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button24"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_app"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView119"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text=" +100 Points"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="-42dp"
                    android:elevation="10dp"
                    app:srcCompat="@drawable/youtube_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView120"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:fontFamily="@font/samsung_sharp_sans_bold"
                            android:text="Subscribe our Youtube"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button25"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_app"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text="Start Task"
                            app:cornerRadius="8dp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/textView121"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text=" +100 Points"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="-42dp"
                    android:elevation="10dp"
                    app:srcCompat="@drawable/facebook_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="176dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView122"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:fontFamily="@font/samsung_sharp_sans_bold"
                            android:text="Follow our Facebook"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button26"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_app"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text="Start Task"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:id="@+id/textView123"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text=" +100 Points"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>.

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="-42dp"
                    android:elevation="10dp"
                    app:srcCompat="@drawable/telegram_icon_mission" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView124"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="42dp"
                            android:fontFamily="@font/samsung_sharp_sans_bold"
                            android:text="Join our Telegram"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button27"
                            android:layout_width="120dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/blue_app"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text="Start Task"
                            app:cornerRadius="8dp" />

                        <TextView
                            android:id="@+id/textView125"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/samsungsharpsans_medium"
                            android:text=" +100 Points"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="174dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/partner_mission_bg">

                    <TextView
                        android:id="@+id/partnershipHeadingTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/samsung_sharp_sans_bold"
                        android:text="Partner mission very soon"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/partnerPoint1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/partner_mission_points_bg"
                        android:fontFamily="@font/samsung_sharp_sans_bold"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp"
                        android:text="Big Rewards"
                        android:textColor="#000000"
                        android:textSize="8sp"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toStartOf="@+id/partnerPoint2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/partnershipHeadingTxt" />

                    <TextView
                        android:id="@+id/partnerPoint2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/partner_mission_points_bg"
                        android:fontFamily="@font/samsung_sharp_sans_bold"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp"
                        android:text="Easy Tasks"
                        android:textColor="#000000"
                        android:textSize="8sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="@+id/partnerPoint1"
                        app:layout_constraintEnd_toStartOf="@+id/partnerPoint3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/partnerPoint1"
                        app:layout_constraintTop_toTopOf="@+id/partnerPoint1" />


                    <TextView
                        android:id="@+id/partnerPoint3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/partner_mission_points_bg"
                        android:fontFamily="@font/samsung_sharp_sans_bold"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp"
                        android:text="Famous Partners"
                        android:textColor="#000000"
                        android:textSize="7sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="@+id/partnerPoint2"
                        app:layout_constraintEnd_toStartOf="@+id/partnerPoint4"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/partnerPoint2"
                        app:layout_constraintTop_toTopOf="@+id/partnerPoint2" />

                    <TextView
                        android:id="@+id/partnerPoint4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/partner_mission_points_bg"
                        android:fontFamily="@font/samsung_sharp_sans_bold"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="6dp"
                        android:text="No Ads"
                        android:textColor="#000000"
                        android:textSize="8sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="@+id/partnerPoint3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/partnerPoint3"
                        app:layout_constraintTop_toTopOf="@+id/partnerPoint3" />

                    <TextView
                        android:id="@+id/visitWebBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/partnership_visit_web_btn_bg"
                        android:fontFamily="@font/samsung_sharp_sans_bold"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="6dp"
                        android:text="FOR PARTNERSHIP VISIT WEB"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/spacer"
                android:layout_width="340dp"
                android:layout_height="1.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/header_divider_home" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>