<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deafult_bg"
    android:padding="30dp"
    tools:context=".SignUp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/signup_app_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/app_icon_bg" />

            <TextView
                android:id="@+id/signup_greeting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-24dp"
                android:text="Nice to see you!"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signup_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Create your account" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deafult_bg">

                <!-- Username Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_username_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:inputType="text"
                    android:textColorHint="#AAAAAA"
                    app:boxStrokeErrorColor="#FF3737"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/signup_username_input"
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:background="@drawable/custom_input_edittext"
                        android:drawableStart="@drawable/profile_icon_edittext"
                        android:drawablePadding="10dp"
                        android:hint="Enter username"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:textSize="14sp"
                        app:hintAnimationEnabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_email_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#AAAAAA"
                    app:boxStrokeErrorColor="#FF3737"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="@+id/signup_username_input_layout"
                    app:layout_constraintStart_toStartOf="@+id/signup_username_input_layout"
                    app:layout_constraintTop_toBottomOf="@+id/signup_username_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/signup_email_input"
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:background="@drawable/custom_input_edittext"
                        android:drawableStart="@drawable/email_icon_edittext"
                        android:drawablePadding="10dp"
                        android:hint="Enter email address"
                        android:inputType="textEmailAddress"
                        android:paddingStart="12dp"
                        android:textSize="14sp"
                        app:hintAnimationEnabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_password_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="textPassword"
                    android:textColorHint="#AAAAAA"
                    app:boxStrokeErrorColor="#FF3737"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="@+id/signup_email_input_layout"
                    app:layout_constraintStart_toStartOf="@+id/signup_email_input_layout"
                    app:layout_constraintTop_toBottomOf="@+id/signup_email_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/signup_password_input"
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:background="@drawable/custom_input_edittext"
                        android:drawableStart="@drawable/password_icon_edittext"
                        android:drawablePadding="10dp"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:paddingStart="12dp"
                        android:textSize="14sp"
                        app:hintAnimationEnabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Referral Code Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_referral_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#AAAAAA"
                    app:boxStrokeErrorColor="#FF3737"
                    app:errorEnabled="true"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="@+id/signup_password_input_layout"
                    app:layout_constraintStart_toStartOf="@+id/signup_password_input_layout"
                    app:layout_constraintTop_toBottomOf="@+id/signup_password_input_layout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/signup_referral_input"
                        android:layout_width="300dp"
                        android:layout_height="52dp"
                        android:background="@drawable/custom_input_edittext"
                        android:drawableStart="@drawable/refer_icon_edittext"
                        android:drawablePadding="10dp"
                        android:hint="Referral code (Optional)"
                        android:paddingStart="12dp"
                        android:textSize="14sp"
                        app:hintAnimationEnabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Terms Checkbox -->
                <CheckBox
                    android:id="@+id/signup_terms_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree with"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/signup_referral_input_layout"
                    app:layout_constraintTop_toBottomOf="@+id/signup_referral_input_layout" />

                <!-- Terms Button -->
                <Button
                    android:id="@+id/signup_terms_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-22dp"
                    android:backgroundTint="@android:color/transparent"
                    android:text="Terms and Conditions"
                    android:textColor="@color/sky_blue"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_terms_checkbox"
                    app:layout_constraintStart_toEndOf="@+id/signup_terms_checkbox"
                    app:layout_constraintTop_toTopOf="@+id/signup_terms_checkbox" />

                <!-- Continue Button -->
                <Button
                    android:id="@+id/signup_continue_button"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/blue_btn"
                    android:text="Continue"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_terms_checkbox" />

                <!-- Login Prompt -->
                <TextView
                    android:id="@+id/signup_login_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/signup_continue_button"
                    app:layout_constraintTop_toBottomOf="@+id/signup_continue_button" />

                <!-- Login Button -->
                <Button
                    android:id="@+id/signup_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="-26dp"
                    android:backgroundTint="@android:color/transparent"
                    android:padding="0dp"
                    android:text="Login"
                    android:textColor="@color/sky_blue"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_login_prompt"
                    app:layout_constraintStart_toEndOf="@+id/signup_login_prompt"
                    app:layout_constraintTop_toTopOf="@+id/signup_login_prompt"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>