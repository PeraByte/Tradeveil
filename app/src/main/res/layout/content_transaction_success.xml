<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".TransactionSuccessActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Transaction Successful"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bottomSheetAnimation"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/amountFiat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/daily_checkin_bottom_sheet_animation" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/ic_success"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/amountFiat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="$325.50"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/recipientAddressText"
            android:layout_width="299dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="You have successfully transferred the amount to"
            android:textColor="@color/dark_gray_text"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/amountFiat"
            app:layout_constraintStart_toStartOf="@+id/amountFiat"
            app:layout_constraintTop_toBottomOf="@+id/amountFiat" />

        <TextView
            android:id="@+id/recipientAddress"
            android:layout_width="251dp"
            android:layout_height="19dp"
            android:gravity="center"
            android:text="32c2cae416e2dca3fccb9a172330eacf9"
            android:textColor="@color/dark_gray_text"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/recipientAddressText"
            app:layout_constraintStart_toStartOf="@+id/recipientAddressText"
            app:layout_constraintTop_toBottomOf="@+id/recipientAddressText" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="84dp"
            android:backgroundTint="@color/blue_btn"
            android:text="Done"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipientAddress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>